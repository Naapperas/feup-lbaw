{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext.asynciterable"],
        "sourceMap": false,
        "outDir": "public/js",
        "rootDir": "resources/assets/ts",
        "strict": true,
        "types": ["vite/client"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "resources/assets/ts",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true
    }
}
